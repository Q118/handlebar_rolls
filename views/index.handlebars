<!-- change to sushi info! -->

<h1>Sushi Rolls!</h1>

<img src="/assets/sushi.gif" alt="moving sushi" width=250 />


<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="card">
        <div class="card-header">
          <h2>Sushi rolls ready to devour!</h2>
        </div>
        <div class="card-body">
          <h5 class="card-title">🍣🍱🍣🦪🍣🍤🍣</h5>
          <div class="card-text">
            <ul>
              {{#each cats}}
              {{#unless sleepy}}
              {{> cats/cat-block sleep=true}}
              {{/unless}}
              {{/each}}
            </ul>
          </div>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="card">
        <div class="card-header">
          <h2>These Devoured Rolss Were <em>Soy</em> Yummy!</h2>
        </div>
        <div class="card-body">
          <h5 class="card-title">🍣🍱🍣🦪🍣🍤🍣</h5>
          <div class="card-text">

            <ul>
              {{#each cats}}
              {{#if sleepy}}
              {{> cats/cat-block sleep=false}}
              {{/if}}
              {{/each}}
            </ul>
          </div>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    </div>
  </div>
</div>





<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Roll</button>
</form>